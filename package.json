{
  "name": "vedro-test-constructor",
  "publisher": "bpolianok",
  "displayName": "vedro-test-constructor",
  "description": "VSCode extention for Vedro framework to construct tests from already available steps",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "Enable CodeLens",
        "command": "vedro-test-constructor.enableCodeLens",
        "category": "Vedro"
      },
      {
        "title": "Disable Codelens",
        "command": "vedro-test-constructor.disableCodeLens",
        "category": "Vedro"
      },
      {
        "title": "Reset cache",
        "command": "vedro-test-constructor.resetCache",
        "category": "Vedro"
      }
    ],
    "configuration": {
      "properties": {
        "vedro-test-constructor.enableCodeLens": {
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "highlight.js": "^11.10.0"
  }
}
